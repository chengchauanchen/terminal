<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <include
            layout="@layout/in_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:layout_marginTop="@dimen/y5"
            android:background="@color/itemblue">

            <ImageView
                android:id="@+id/user_logo"
                android:layout_width="@dimen/x45"
                android:layout_height="@dimen/y32"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x15"
                android:background="@drawable/user_photo" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x20">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张星星"
                    android:textColor="@color/user_info_text_black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/user_sex"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginTop="@dimen/y1"
                    android:layout_toRightOf="@id/user_name"
                    android:background="@drawable/new_men_icon" />

                <TextView
                    android:id="@+id/user_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:text="NO:00123456"
                    android:layout_marginBottom="@dimen/x1"
                    android:textColor="@color/user_info_text_gray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/add_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="添加到通讯录"
                android:textSize="16sp"
                android:layout_marginRight="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x20"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/kill"/>
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x2"
                    android:text="遥毙"
                    android:textColor="@color/kill_member" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginTop="@dimen/y5"
            android:background="@color/itemblue"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:text="所属单位"
                android:textColor="@color/user_info_text_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_unit"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x19"
                android:text="未填写"
                android:textColor="@color/user_info_text_company"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginTop="0.5dp"
            android:background="@color/itemblue"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:text="电话号码"
                android:textColor="@color/user_info_text_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x19"
                android:text="未填写"
                android:textColor="@color/user_info_phone_number"
                android:textSize="16sp" />
        </LinearLayout>
        <!--<LinearLayout-->

            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/y30"-->
            <!--android:layout_marginTop="0.5dp"-->
            <!--android:background="@color/itemblue"-->
            <!--android:gravity="center_vertical">-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="@dimen/x20"-->
                <!--android:text="身份证号"-->
                <!--android:textColor="@color/user_info_text_gray"-->
                <!--android:textSize="16sp" />-->

            <!--<TextView-->
                <!--android:id="@+id/user_ID_number"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="@dimen/x19"-->
                <!--android:text="未填写"-->
                <!--android:textColor="@color/user_info_text_card_no"-->
                <!--android:textSize="16sp" />-->
        <!--</LinearLayout>-->

        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fun_bg">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </FrameLayout>
       


    </LinearLayout>
    <cn.vsx.vc.view.VolumeViewLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/volume_layout" />
</RelativeLayout>