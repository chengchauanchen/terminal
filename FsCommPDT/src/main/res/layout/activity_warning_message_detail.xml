<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context=".activity.WarningMessageDetailActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:background="@drawable/titel_bar_bg" />
    <LinearLayout
        android:id="@+id/rl_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@drawable/titel_bar_bg"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/news_bar_return"
            android:layout_width="@dimen/x23"
            android:layout_height="@dimen/y17"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/news_bar_return" />
        
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"
            android:textColor="@color/individual_news_bar_name"
            android:textSize="21sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <TextView
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="报  警  人 :" />
        
        <TextView
            android:id="@+id/tv_aperson"
            style="@style/warning_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="张晋" />
        
        <TextView
            android:id="@+id/tv_aperson_phone"
            style="@style/warning_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="13100715231" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <TextView
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派  警  人 :" />
        
        <TextView
            android:id="@+id/tv_rece_person"
            style="@style/warning_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="张晋" />
        
        <TextView
            android:id="@+id/tv_rece_person_phone"
            style="@style/warning_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="027-51253652" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <TextView
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警时间 :" />
        
        <TextView
            android:id="@+id/tv_alarm_time"
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2019.01.02 20:02" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <TextView
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="案发地点 :" />
        
        <TextView
            android:id="@+id/tv_address"
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="光谷大道" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <TextView
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警内容 :" />
        
        <TextView
            android:id="@+id/tv_summary"
            style="@style/warning_common_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</LinearLayout>