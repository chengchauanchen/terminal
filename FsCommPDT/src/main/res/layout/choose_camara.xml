<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/choose_camera_dialog_background">
    
    <TextView
        android:id="@+id/tv_choose_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/x10"
        android:text="选择摄像头"
        android:textColor="@color/white"
        android:textSize="15sp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_choose_camera"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/x20">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/iv_phone_camera"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_camera" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机摄像"
                android:textColor="@color/camera_text" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/iv_out_camera"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/out_camera" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外置摄像头"
                android:textColor="@color/camera_text" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>