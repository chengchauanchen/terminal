<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <include layout="@layout/in_title_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/about_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x15">
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/textview_color"
            android:textSize="15sp" />
        
        <EditText
            android:id="@+id/create_temporary_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="临时组"
            android:textColor="@color/edittext_textcolor"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="18sp"/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/about_item_background">
        
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="10dp"
            android:text="存活时间"
            android:textColor="@color/textview_color"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/exist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_time"
            android:text="23时59分59秒"
            android:textColor="@color/edittext_textcolor"
            android:textSize="18sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/x14"
            android:text="( 临时组存在的时间 )"
            android:textColor="@color/textview_color" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x65"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/about_item_background">
        
        <TextView
            android:id="@+id/tv_lock_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="10dp"
            android:text="是否锁定"
            android:textColor="@color/textview_color"
            android:textSize="15sp" />
        
        <LinearLayout
            android:id="@+id/ll_locked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_lock_time"
            android:gravity="center"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/iv_locked"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/checkbox_background" />
            
            <TextView
                android:id="@+id/tv_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="是"
                android:textSize="18sp"
                android:textColor="@color/about_text_gray"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ll_locked"
            android:gravity="center"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/iv_unlocked"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/checkbox_background" />
            
            <TextView
                android:id="@+id/tv_unlocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="否"
                android:textSize="18sp"
                android:textColor="@color/edittext_textcolor"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/x14"
            android:text="( 锁定后，不允许临时组内成员切组 )"
            android:textColor="@color/textview_color" />
    </RelativeLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/about_item_background"
        android:paddingLeft="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/temp_group_bg"
             />
    </FrameLayout>
    
    
    <LinearLayout
        android:id="@+id/ll_lock_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/about_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:text="锁定时间"
            android:textColor="@color/textview_color"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/locked_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00时10分00秒"
            android:textColor="@color/edittext_textcolor"
            android:textSize="18sp" />
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/about_item_background">
        
        <TextView
            android:id="@+id/tv_change_group"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="10dp"
            android:text="自动切组"
            android:textColor="@color/textview_color"
            android:textSize="15sp" />
        
        <LinearLayout
            android:id="@+id/ll_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_change_group"
            android:gravity="center"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/iv_change"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/checkbox_background" />
            
            <TextView
                android:id="@+id/tv_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="是"
                android:textSize="18sp"
                android:textColor="@color/edittext_textcolor"
                />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ll_change"
            android:gravity="center"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/iv_unchange"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/checkbox_background" />
            
            <TextView
                android:id="@+id/tv_unchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="否"
                android:textSize="18sp"
                android:textColor="@color/about_text_gray" />
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="@dimen/x14"
            android:text="( 将组员自动切换到所创建的组 )"
            android:textColor="@color/textview_color" />
    </RelativeLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <Button
            android:id="@+id/btn_create_temporary_group"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/x45"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/x40"
            android:background="@drawable/temporary_group_button_shape"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x5"
            android:text="确定创建"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </FrameLayout>

</LinearLayout>