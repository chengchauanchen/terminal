<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_tempgroup_bg">

    <LinearLayout
        android:id="@+id/ll_submit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_200"
        android:minHeight="@dimen/dp_120"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:src="@drawable/dialog_icon" />

        <TextView
            android:id="@+id/text_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:text="@string/text_disbanded_successfully"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25" />

        <TextView
            android:id="@+id/text_toJump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_temporary_group_jumping"
            android:textColor="@color/yellow_ef"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_200"
        android:minHeight="@dimen/dp_120"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_delete_temporary_group_title"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/live_theme_confirm_bg"
                android:text="@string/text_sure"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/live_theme_confirm_bg"
                android:text="@string/text_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>