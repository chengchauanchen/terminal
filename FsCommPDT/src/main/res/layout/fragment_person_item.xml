<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/itemblue"
    >

    <LinearLayout
        android:id="@+id/catagory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_catagory"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y13"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:text="A"
            android:textColor="@color/group_person_text_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_person_search_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/itemblue"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="@dimen/y30"
            android:layout_height="@dimen/y30"
            android:layout_marginLeft="@dimen/x12"
            android:background="@drawable/user_photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y30"
            android:layout_marginLeft="@dimen/x12"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="张星星"
                android:maxLength="12"
                android:ellipsize="end"
                android:textColor="@color/setting_text_gray"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_member_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="ID:123456"
                android:textColor="@color/setting_text_gray_two"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textStyle="normal" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
        android:id="@+id/shoutai_dial_to"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/tel"/>

    </LinearLayout>



        <LinearLayout
            android:id="@+id/message_to"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/new_message_icon"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp">

            <LinearLayout
                android:id="@+id/call_to"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/new_call_icon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_delete"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="10dp">
                <CheckBox
                    android:layout_gravity="center_vertical"
                    android:id="@+id/cb_selectmember"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/x5"
                    android:focusable="false"
                    android:clickable="false"
                    android:button="@drawable/checkbox"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textSize="@dimen/x16"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:id="@+id/lay_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver_bg"
        android:orientation="vertical" />


</LinearLayout>