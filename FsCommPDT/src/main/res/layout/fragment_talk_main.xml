			<!--显示组的名字并且滑动换组-->
			<LinearLayout
				android:id="@+id/talkback_group_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="visible">

				<TextView
					android:id="@+id/tv_current_folder"
					style="@style/current_folder"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="@dimen/y14"
					android:text="10Q-10Z" />

				<TextView
					android:id="@+id/tv_current_group"
					style="@style/current_group"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="@dimen/y4"
					android:minHeight="32dp"
					android:text="7B-10T" />

				<!-- 滑动换组 -->
				<LinearLayout
					android:id="@+id/change_group_show_area"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/y35"
					android:gravity="bottom|center_horizontal"
					android:orientation="vertical"
					android:visibility="visible">

					<TextView
