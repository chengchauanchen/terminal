<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemblue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y29">

        <TextView
            android:id="@+id/group_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="7B-11T"
            android:textColor="@color/group_text_gray"
            android:textSize="@dimen/x12" />

        <ImageView
            android:id="@+id/to_group"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x100"
            android:src="@drawable/new_message_icon"/>

        <TextView
            android:id="@+id/change_group"
            android:layout_width="@dimen/x53"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x18"
            android:background="@drawable/change_group_button_shape"
            android:gravity="center"
            android:text="切组"
            android:textColor="@color/change_group_text"
            android:textSize="@dimen/x12"
            android:textStyle="normal"
             />

        <ImageView
            android:id="@+id/is_current_group_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x35"
            android:src="@drawable/new_current_icon"
            android:visibility="invisible" />
        <!--组扫描界面使用-->
        <TextView
            android:id="@+id/is_scan_group_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x35"
            android:text="扫描组"
            android:textColor="@color/group_text_gray"
            android:visibility="invisible" />
        <CheckBox
            android:visibility="gone"
            android:id="@+id/cb_scan_selectmember"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:focusable="false"
            android:clickable="false"
            android:button="@drawable/checkbox"
            />
    </RelativeLayout>

    <include layout="@layout/universal_line" />
</LinearLayout>