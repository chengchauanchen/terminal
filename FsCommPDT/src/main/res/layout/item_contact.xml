<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/shoutai_user_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shoutai_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="8"
                android:text=""
                android:textColor="@color/group_text_gray"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/shoutai_tv_member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/group_text_gray_two"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <LinearLayout
            android:id="@+id/shoutai_dial_to"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/tel" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoutai_message_to"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/new_message_icon" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/shoutai_call_to"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="12.5dp"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/new_call_icon" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="65dp"
        android:layout_marginRight="10dp"
        android:background="@color/diver_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>
