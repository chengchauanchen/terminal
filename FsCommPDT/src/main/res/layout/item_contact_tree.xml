<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:background="@color/itemblue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ll_title"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/icon"
                android:layout_marginLeft="20dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@id/icon"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/group_text_gray"
                android:textSize="@dimen/x12"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="240dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:text="gddfgdfgdfgdfgdfhgfgdgdgdfgdfgdfgdggdfdfdfgdfgdfgdfgdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shoutai_group_size"
                android:layout_toRightOf="@id/tv_name"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="12"
                android:textColor="@color/group_text_gray"
                android:textSize="@dimen/x12" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/itemblue"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/shoutai_user_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/user_photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/shoutai_tv_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLength="8"
                    android:ellipsize="end"
                    android:textColor="@color/group_text_gray"
                    android:textSize="@dimen/x12"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/shoutai_tv_member_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/group_text_gray_two"
                    android:textSize="@dimen/x11"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <LinearLayout
                android:id="@+id/shoutai_dial_to"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tel"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shoutai_message_to"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/new_message_icon"/>

            </LinearLayout>




                <LinearLayout
                    android:id="@+id/shoutai_call_to"
                    android:layout_marginRight="12dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/new_call_icon" />

                </LinearLayout>
        </LinearLayout>
        
    </RelativeLayout>
    
    
    
    <include layout="@layout/universal_line" />
</LinearLayout>