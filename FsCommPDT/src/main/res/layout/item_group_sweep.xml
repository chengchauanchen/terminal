<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/itemblue"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        >
        <TextView
            android:id="@+id/tv_sweep_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="扫描组名称"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="@color/setting_text_gray"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/new_clean_icon"/>
        <TextView
            android:id="@+id/tv_new_sweep"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x15"
            android:layout_centerVertical="true"
            android:text="主通话组"
            android:textColor="@color/setting_text_gray_two"
            android:textSize="12sp"/>
    </RelativeLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/backgroudblue"/>
</LinearLayout>