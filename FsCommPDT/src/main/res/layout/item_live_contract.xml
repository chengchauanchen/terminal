<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/shoutai_user_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:src="@drawable/user_photo" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/shoutai_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/group_text_gray"
                android:textSize="16sp"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/shoutai_tv_member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/group_text_gray_two"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/checkbox" />
    </LinearLayout>
</LinearLayout>