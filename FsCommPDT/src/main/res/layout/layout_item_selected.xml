<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        
        <ImageView
            android:id="@+id/shoutai_user_logo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_8"
            android:src="@drawable/user_photo" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/shoutai_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/group_text_gray"
                android:textSize="@dimen/sp_16"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/shoutai_tv_member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/group_text_gray_two"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/icon_close_read"/>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half_one"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/diver_bg" />
</LinearLayout>
