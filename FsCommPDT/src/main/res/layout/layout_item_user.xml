<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:padding="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10">

            <ImageView
                android:id="@+id/shoutai_user_logo"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50" />

            <ImageView
                android:id="@+id/recorder_binded_logo"
                android:layout_width="15.5dp"
                android:layout_height="6dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ico_phone_recorder_binded"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/shoutai_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/group_text_gray"
                android:textSize="@dimen/sp_16"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/shoutai_tv_member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/group_text_gray_two"
                android:textSize="@dimen/sp_13"
                android:textStyle="normal" />
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="center">
            
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:button="@drawable/checkbox"
                android:clickable="false"
                android:focusable="false" />
        
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half_one"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/diver_bg" />
</LinearLayout>
