<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_user_info"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y40"
    android:background="@color/itemblue"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="@dimen/x45"
        android:layout_height="@dimen/y32"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x15"
        android:background="@drawable/user_photo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x19"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_logo"
                android:layout_toRightOf="@+id/user_logo"
                android:text="张星星"
                android:textColor="@color/setting_text_gray"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/x13"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/x1"
                android:layout_toRightOf="@id/user_name"
                android:background="@drawable/new_men_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="@dimen/y2"
            android:layout_toRightOf="@+id/user_logo"
            android:textColor="@color/setting_text_gray_two"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>