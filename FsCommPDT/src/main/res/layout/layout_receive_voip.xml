<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background"
    android:orientation="vertical"
    android:splitMotionEvents="false">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/individual_call_retract_emergency"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp">
        
        <ImageView
            android:id="@+id/iv_member_portrait_chooice"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:background="@drawable/user_photo" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_member_portrait_chooice"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_member_name_chooice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1002"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            
            <!--<TextView-->
                <!--android:id="@+id/tv_member_name_chooice"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="@dimen/y2"-->
                <!--android:text="张星星"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="20sp" />-->
            <!---->
            <!--<TextView-->
                <!--android:id="@+id/tv_member_id_chooice"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="@dimen/y2"-->
                <!--android:text="123456789"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="15sp" />-->
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:text="来电..."
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/multiparty_call" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5px"
            android:textColor="@color/white"
            android:text="终端" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginTop="@dimen/y50"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:id="@+id/ll_individual_call_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/individual_call_refuse_button_shape"
                android:gravity="center"
                android:orientation="vertical">
                
                <ImageView
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/phone_withe_shape1"
                    android:src="@drawable/phone_withe" />
            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="挂断"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:orientation="vertical">
            
            <LinearLayout
                android:id="@+id/ll_individual_call_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/individual_call_accept_button_shape"
                android:gravity="center"
                android:orientation="vertical">
                
                <ImageView
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x30"
                    android:background="@drawable/phone_withe_shape2"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/phone" />
            </LinearLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="接听"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

