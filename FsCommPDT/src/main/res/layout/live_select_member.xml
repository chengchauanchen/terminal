<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/titel_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">
        
        <ImageView
            android:id="@+id/iv_live_selectmember_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/goback_contacts" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"
            android:textColor="@color/white"
            android:textSize="20sp" />
        
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
        <Button
            android:id="@+id/btn_live_selectmember_start"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/live_theme_confirm_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_live_selectmember_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/itemblue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">
        
        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/live_theme_text_bg"
            android:gravity="center"
            android:text="主题"
            android:textColor="@color/white"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/tv_live_selectmember_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/group_text_gray"
            android:textSize="14sp" />
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/live_revise" />
    </LinearLayout>
    
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/common_bg" />
    
    <LinearLayout
        android:id="@+id/ll_no_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x35"
            android:text="没有找到“"
            android:textColor="#99535353"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/tv_no_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x35"
            android:text="大公鸡"
            android:textColor="#0191ff"
            android:textSize="15sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x35"
            android:text="”相关结果"
            android:textColor="#99535353"
            android:textSize="15sp" />
    </LinearLayout>
    
    <include
        android:id="@+id/ll_layout_members"
        layout="@layout/fragment_new_police_affairs"/>
    
</LinearLayout>