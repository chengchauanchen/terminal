<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">
    
    <RelativeLayout
        android:id="@+id/home_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_gravity="center"
        android:gravity="center_horizontal"
        >
	    <ImageView 
	        android:id="@+id/progress_dialog_img"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
			android:layout_centerHorizontal="true"
	        android:src="@drawable/loading"
			/>
	    <ImageView
		    android:id="@+id/iv_loading_bg"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_centerHorizontal="true"
			android:src="@drawable/loading_bg"/>
	    <TextView
	        android:id="@+id/progress_dialog_txt"
	        android:textColor="@color/loading_tv"
			android:layout_marginTop="@dimen/x5"
			android:layout_below="@id/progress_dialog_img"
			android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
    </RelativeLayout>
    

</LinearLayout>
