<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/home_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/progress_dialog_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading" />

        <ImageView
            android:id="@+id/iv_loading_bg"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading_bg" />

        <TextView
            android:id="@+id/progress_dialog_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_dialog_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/loading_tv" />
    </RelativeLayout>
    <!--created by tzl 2020/04/15  for bug  3508  begin-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        >

        <TextView
            android:id="@+id/tv_apk_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/upload_log_button"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tv_uoloadLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传日志"
            android:textColor="@color/upload_log_button"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_18"
            />

    </RelativeLayout>
    <!--created by tzl 2020/04/15  for bug  3508  end-->
</RelativeLayout>
