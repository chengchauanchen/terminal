<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jignwutong_ll_person_search_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/itemblue"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/shoutai_user_logo"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x20"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shoutai_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/group_text_gray"
                android:textSize="@dimen/x12"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/shoutai_tv_member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/group_text_gray_two"
                android:textSize="@dimen/x11"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/shoutai_message_to"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x25"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:background="@drawable/new_message_icon" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x25">

            <LinearLayout
                android:id="@+id/shoutai_call_to"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x16"
                    android:layout_height="@dimen/x16"
                    android:background="@drawable/new_call_icon" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/universal_line" />
</LinearLayout>