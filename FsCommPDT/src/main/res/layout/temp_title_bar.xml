<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:background="@drawable/titel_bar_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/titel_bar_bg"
        >

        <ImageView
            android:id="@+id/news_bar_back_temp"
            android:layout_width="@dimen/x23"
            android:layout_height="@dimen/y17"
            android:layout_marginLeft="@dimen/x15"
            android:src="@drawable/news_bar_return" />

        <View
            android:id="@+id/news_bar_line"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/y10"
            android:layout_marginLeft="@dimen/x11"
            android:layout_marginRight="@dimen/x11"
            android:background="@color/group_call_news_bar_line" />


        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="组内成员"
            android:textColor="@color/bar_text_white"
            android:textSize="@dimen/x15"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/temp_group_add"
             />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:visibility="gone"
            android:src="@drawable/temp_group_delete" />

        <TextView
            android:visibility="gone"
            android:id="@+id/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:text="取消"
            android:textColor="@color/bar_text_white"
            android:textSize="@dimen/x15"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:text="删除"
            android:textColor="@color/bar_text_white"
            android:textSize="@dimen/x15"/>

    </LinearLayout>
</LinearLayout>