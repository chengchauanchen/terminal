<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/other_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y45"
    android:background="@drawable/titel_bar_bg"
    android:paddingTop="@dimen/x30">


    <TextView
        android:id="@+id/setting_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/dp_5"
        android:ellipsize="middle"
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="@color/bar_text_white"
        android:textSize="@dimen/sp_18" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_toRightOf="@id/setting_group_name"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speaking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bar_text_white"
            android:textSize="@dimen/x13"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/icon_laba"
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/x13"
            android:layout_marginLeft="@dimen/x3"
            android:src="@drawable/horn"
            android:visibility="gone" />

    </LinearLayout>


    <ImageView
        android:id="@+id/find_iocn"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x56"
        android:src="@drawable/search_white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_titlebar_help"
        android:layout_width="@dimen/x25"
        android:layout_height="@dimen/x25"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_toLeftOf="@+id/add_icon"
        android:padding="@dimen/x3"
        android:src="@drawable/help"
        android:visibility="gone" />
    <!--图像上报-->
    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="@dimen/x22"
        android:layout_height="@dimen/x22"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/new_menu" />

    <!--音量-->
    <ImageView
        android:id="@+id/voice_image"
        android:layout_width="@dimen/x22"
        android:layout_height="@dimen/x22"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_toLeftOf="@id/add_icon"
        android:src="@drawable/horn" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</RelativeLayout>