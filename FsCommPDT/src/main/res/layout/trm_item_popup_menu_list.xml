<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/video_pop_bg"
        >

        <ImageView
            android:id="@+id/trm_menu_item_icon"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y15"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x9"
            android:scaleType="center" />

        <TextView
            android:id="@+id/trm_menu_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:textSize="15sp"
            android:textColor="@color/video_text_color"/>
    </LinearLayout>
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_black_line" />


</RelativeLayout>