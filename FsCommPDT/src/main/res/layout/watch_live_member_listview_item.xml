<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_watch_item_photo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/member_info"
        />

    <TextView
        android:id="@+id/tv_watch_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王城"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_watch_item_living"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#F1924C"
        android:textSize="14sp"
        android:layout_marginLeft="25dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_watch_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中午 12::57"
        android:textColor="@color/gray"
        android:layout_marginRight="10dp"
        />



</LinearLayout>