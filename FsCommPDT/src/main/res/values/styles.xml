        <item name="mtogglebutton_button_off">@drawable/mtogglebutton_button_off</item>
        <item name="mtogglebutton_button_on">@drawable/mtogglebutton_button_on</item>
    </style>

    <!-- 水平方向音量调节seekbar -->
    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">3.0dip</item>
        <item name="android:minHeight">3.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/seekbar_define_color_style</item>
        <item name="android:thumb">@drawable/seekbar_thumb_color_style</item>
        <item name="android:thumbOffset">0dip</item>
    </style>
    
    <style name="press_to_talk" parent="wrap_content_style">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:text">@string/press_to_talk_text</item>
        <item name="android:textStyle">normal</item>
    </style>
    
        <!-- 准备说话 -->
    <style name="pre_to_talk" parent="wrap_content_style">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:text">@string/pre_speaking</item>
        <item name="android:textStyle">normal</item>
    </style>
    
     <!-- 其它人正在说话 -->
    <style name="other_is_talking" parent="wrap_content_style">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:text">@string/other_is_talking_text</item>
        <item name="android:textStyle">normal</item>
    </style>
    
     <!-- 排队中.... -->
    <style name="wait_in_line" parent="wrap_content_style">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:text">@string/wait_in_line_text</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- 您已被禁言 -->
    <style name="not_speak" parent="wrap_content_style">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:text">@string/not_speak</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- 您已被禁听 -->
    <style name="not_listen" parent="wrap_content_style">
        <item name="android:textColor">#7f7f7f</item>
