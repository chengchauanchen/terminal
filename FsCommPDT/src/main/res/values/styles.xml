        <item name="android:text">@string/not_listen_and_speak</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- PTT按钮 -->
    <style name="ptt_button" >
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:background">@drawable/ptt_silence</item>
        <item name="android:layout_gravity">top</item>
    </style>
    
    <!-- 操作菜单样式 -->
    <style name="operate_menu" parent="wrap_content_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <!-- 操作菜单样式 -->
    <style name="operate_menu_default" parent="wrap_content_style">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- 操作菜单样式 -->
    <style name="operate_menu_selected" parent="wrap_content_style">
        <item name="android:textColor">#0092ff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- 进度条样式 -->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">false</item> <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <!-- 改名dialog样式 -->
    <style name="change_name_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <!-- popuwindow样式 -->
    <style name="popupwindow_anim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>
    
    <!-- 锁屏界面样式 -->
    <style name="LockScreenBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>

    <!--通话页面弹出-->
    <style name="AnimationWindow">
        <item name="android:windowEnterAnimation">@anim/scale_enter</item>
        <item name="android:windowExitAnimation">@anim/scale_exit</item>
    </style>

    <style name="TRM_ANIM_STYLE">
        <item name="android:windowEnterAnimation">@anim/trm_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/trm_popup_exit</item>
    </style>


    <!--群组界面-顶部组LinearLayout的style-->
    <style name="linearlayout_group_style">
