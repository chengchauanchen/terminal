<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_file_list"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/dp_30"
    android:orientation="vertical">

    <include layout="@layout/layout_top_close"/>

    <cn.vsx.vc.view.MyTabLayout.MyTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:tabMode="scrollable"
        app:tabMinWidth="40dp"
        app:tabGravity="fill"
        app:tabBackground="@color/transparent"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabIndicatorColor="@color/file_line_blue"
        app:tabTextColor="@color/file_title_unchecked_text"
        app:tabSelectedTextColor="@color/file_title_checked_text"
        app:tabIndicatorHeight="@dimen/dp_3"/>

    <FrameLayout
        android:id="@+id/contacts_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>