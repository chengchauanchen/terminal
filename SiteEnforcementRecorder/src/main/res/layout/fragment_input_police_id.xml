<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_80"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/dp_30"
    android:orientation="vertical">

    <include layout="@layout/layout_top_close"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerInParent="true"/>

        <EditText
            android:id="@+id/et_police_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v_line"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true"
            android:gravity="center"
            android:inputType="number"
            android:digits="1234567890"
            android:hint="@string/text_input_bind_police_id"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/blue_42"
            android:textColorHint="@color/blue_42_50"
            android:background="@drawable/bg_bind_input"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/bt_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/text_sure"
            android:textSize="@dimen/sp_24"
            android:textColor="@drawable/bind_input_button_text_color"/>
    </RelativeLayout>
</LinearLayout>