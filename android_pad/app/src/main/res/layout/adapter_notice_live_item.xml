<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_black90transparent"
    android:minHeight="119px"
    android:paddingLeft="37px"
    android:layout_marginBottom="5px"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:src="@mipmap/live_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17px"
        android:text="王晨"
        android:textColor="@color/white"
        android:textSize="27px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="70000007"
        android:textColor="@color/white"
        android:textSize="27px" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_accept_live"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="点击查看"
        android:textColor="@color/white"
        android:textSize="27px" />
</LinearLayout>

