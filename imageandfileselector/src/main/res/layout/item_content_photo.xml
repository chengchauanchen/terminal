<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:orientation="vertical">

    <com.zectec.imageandfileselector.view.CheckBox
        android:id="@+id/cb_file"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        app:border_color="@color/color_48baf3"
        app:checkbox_color="@color/color_48baf3"
        app:checkbox_size="@dimen/dp_24"
        app:checked_drawable="@drawable/ic_album_tick_white"
        app:unchecked_color="@color/md_white_1000" />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toEndOf="@+id/cb_file"
        android:layout_toRightOf="@+id/cb_file"
        android:scaleType="centerCrop"
        android:src="@drawable/rc_ad_list_audio_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toEndOf="@+id/iv_cover"
        android:layout_toRightOf="@+id/iv_cover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="middle"
            android:lines="1"
            android:text="kjgsadgfdsjk"
            android:textColor="@color/md_grey_900"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_2"
            android:text="kjgsadgfdsjk"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_2"
            android:text="kjgsadgfdsjk"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half_one"
        android:layout_alignParentBottom="true"
        android:background="@color/md_blue_grey_100" />
</RelativeLayout>