<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_face_pair"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_title_face_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘五"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:id="@+id/tv_matched_degree"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_15"
            android:text="99%"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center"
            android:background="@drawable/matched1"/>

        <TextView
            android:id="@+id/tv_content_face_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男,1992年05月11日"
            android:textSize="@dimen/sp_11"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
        />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_photo_face_pair"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_6" />

</LinearLayout>