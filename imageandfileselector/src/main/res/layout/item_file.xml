<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:orientation="horizontal">

    <com.zectec.imageandfileselector.view.CheckBox
        android:id="@+id/cb_file"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        app:border_color="@color/color_48baf3"
        app:checkbox_color="@color/color_48baf3"
        app:checkbox_size="@dimen/dp_24"
        app:checked_drawable="@drawable/ic_album_tick_white"
        app:unchecked_color="@color/md_white_1000" />

    <ImageView
        android:id="@+id/iv_file"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:src="@drawable/rc_file_icon_file" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="fjlksdjflkjsdfjdsljflsdj"
            android:textColor="@color/grey_35"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="fkjdslfjlsdkfjlksdj"
            android:textColor="@color/grey_99"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_file_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="fkjdslfjlsdkfjlksdj"
            android:textColor="@color/grey_99"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>


</LinearLayout>