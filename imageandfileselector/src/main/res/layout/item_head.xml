<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@color/md_grey_50"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toEndOf="@+id/expanded_menu"
        android:layout_toRightOf="@+id/expanded_menu"
        android:gravity="center_vertical"
        android:text="kjgsadgfdsjk"
        android:textColor="@color/md_blue_grey_700"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/expanded_menu"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/ic_arrow_drop_up_grey_700_24dp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/count"
        android:textColor="@color/grey_59"
        android:textSize="@dimen/sp_10"
        android:visibility="visible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half_one"
        android:layout_alignParentBottom="true"
        android:background="@color/md_blue_grey_200" />
</RelativeLayout>