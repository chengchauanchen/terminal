<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp">
    
    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity">
        
        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:background="@drawable/user_photo"
            android:scaleType="fitXY" />
        
        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userid"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_toRightOf="@id/iv_userhead"
            tools:ignore="NotSibling">
            
            
            <TextView
                android:id="@+id/tv_userid"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_userhead"
                android:textSize="@dimen/chat_nick_text_size"
                android:visibility="gone" />
            
            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_userid">
                
                <com.zectec.imageandfileselector.view.BubbleImageView
                    android:id="@+id/iv_content"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="200dp"
                    android:scaleType="fitCenter"
                    app:bubble_angle="3dp"
                    app:bubble_arrowHeight="10dp"
                    app:bubble_arrowLocation="0"
                    app:bubble_arrowOffset="-5dp"
                    app:bubble_arrowTop="15dp"
                    app:bubble_arrowWidth="5dp" />
                
                
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:src="@drawable/video" />
            </RelativeLayout>
            
            <TextView
                android:id="@+id/tv_voice_length"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/rl_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/rl_content"
                android:gravity="center" />
            <com.zectec.imageandfileselector.view.LoadingCircleView
                android:id="@+id/loading_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/rl_content" />
        </RelativeLayout>
        
        
    
        
        
    </RelativeLayout>
    
    <View
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:visibility="gone" />
</LinearLayout>