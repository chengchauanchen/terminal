<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CheckBox">
        <attr name="checkbox_color" format="color"/>
        <attr name="unchecked_color" format="color"/>
        <attr name="disabled_color" format="color"/>
        <attr name="border_color" format="color"/>
        <attr name="checkbox_size" format="dimension"/>
        <attr name="invisible_in_unchecked_state" format="boolean"/>
        <attr name="checked_drawable" format="reference"/>
        <attr name="unchecked_drawable" format="reference"/>
        <attr name="show_border_in_check_state" format="boolean"></attr>
    </declare-styleable>

    <style name="MyToolbar" parent="android:Widget">
        <item name="titleTextAppearance">@style/ToolBarTitle</item>
        <!--<item name="subtitleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle</item>-->
        <item name="android:minHeight">48dp</item>
        <item name="titleMargins">4dp</item>
        <item name="maxButtonHeight">56dp</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
        <!--<item name="collapseContentDescription">@string/abc_toolbar_collapse_description</item>-->
        <item name="contentInsetStart">16dp</item>
        <!--<item name="android:paddingLeft">@dimen/abc_action_bar_default_padding_start_material</item>-->
        <!--<item name="android:paddingRight">@dimen/abc_action_bar_default_padding_end_material</item>-->
    </style>

    <style name="ToolBarTitle" parent="android:Widget">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--对话框按钮文字颜色-->
        <item name="colorAccent">@color/color_48baf3</item>
        <!--&lt;!&ndash;对话框内容文字颜色&ndash;&gt;-->
        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!--&lt;!&ndash;对话框背景色&ndash;&gt;-->
        <!--<item name="android:background">#5fa3d0</item>-->
    </style>

    <style name="chat_text_date_style">
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:layout_marginLeft">40dip</item>
        <item name="android:layout_marginRight">40dip</item>
        <item name="android:textColor">@color/chat_title</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/timestampe_bg</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!--自定义圆形进度条-->
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_white</item>
        <item name="android:indeterminate">true</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">@color/chat_name</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">150dp</item>
    </style>

    <style name="ShadleStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:shadowColor">#4d4d4d</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>
    
    <style name="chat_warning_common_tv">
        <item name="android:textColor">@color/chat_warning_common_tv</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="warning_common_tv">
        <item name="android:textColor">@color/warning_common_tv</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="warning_name_tv">
        <item name="android:textColor">@color/edittext_textcolor</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
