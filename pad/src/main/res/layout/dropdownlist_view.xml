<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/compound"
    android:layout_width="match_parent"
    android:layout_height="@dimen/regist_item_height"
    android:background="@drawable/bg_round_regist_edit"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="添加单位"
        android:textColor="@color/regist_edit_text_color"
        android:textSize="@dimen/chat_text_size" />

    <ImageView
        android:id="@+id/btn"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:src="@drawable/regist_down_arrowhead" />
</LinearLayout>