<resources>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowActionBar">false</item><!--无ActionBar-->
        <item name="android:windowFullscreen">true</item><!--全屏即无通知栏-->
        <item name="android:windowContentOverlay">@null</item><!--是否有遮盖-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowActionBar">false</item><!--无ActionBar-->
        <item name="android:windowFullscreen">true</item><!--全屏即无通知栏-->
        <item name="android:windowContentOverlay">@null</item><!--是否有遮盖-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 进度条样式 -->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">false</item> <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="BottomView">
        <attr name="selected" format="boolean" />
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="src" format="reference" />
        <attr name="textColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="PullLivePlayer">
        <attr name="loadText" format="string" />
    </declare-styleable>

    <style name="bottom_unselect_text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottom_select_text_color">
        <item name="android:textColor">@color/color_00A4FF</item>
    </style>

    <style name="group_name_color">
        <item name="android:textColor">@color/group_name_color</item>
    </style>

    <style name="normal_group_color">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="ptt_gray">
        <item name="android:textColor">@color/ptt_gray</item>
    </style>
    
    <style name="white">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="red">
        <item name="android:textColor">@color/red</item>
    </style>
    
    <style name="funcation_top_btn_text">
        <item name="android:textColor">@color/funcation_top_btn_text</item>
    </style>
    
    <style name="function_wait_text">
        <item name="android:textColor">@color/function_wait_text</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">@color/chat_other_text_color</item>
        <item name="android:textSize">@dimen/chat_other_text_size</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ShadleStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">20px</item>
        <item name="android:shadowColor">#4d4d4d</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="chat_warning_common_tv">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/chat_text_size</item>
    </style>

    <style name="warning_common_tv">
        <item name="android:textColor">@color/warning_common_tv</item>
        <item name="android:textSize">@dimen/chat_text_size</item>
    </style>
    <style name="warning_name_tv">
        <item name="android:textColor">@color/edittext_textcolor</item>
        <item name="android:textSize">@dimen/chat_text_size</item>
    </style>
</resources>
