<?xml version="1.0" encoding="utf-8"?>
<manifest package="cn.vsx.vc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:versionCode="15"
    android:versionName="1.0.15">
    
    <application
        android:name="cn.vsx.uav.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:persistent="true"
        android:theme="@style/AppTheme"
        tools:replace="label, theme">
        <!-- DJI SDK -->
        <uses-library android:name="com.android.future.usb.accessory" />
        <activity
            android:name="dji.sdk.sdkmanager.DJIAoaControllerActivity"
            android:theme="@android:style/Theme.Translucent">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
                android:resource="@xml/accessory_filter" />
        </activity>
        <service android:name="dji.sdk.sdkmanager.DJIGlobalService" /> <!-- DJI SDK -->
        <!--
           ADD API_KEY HERE and make sure you
           are connected to the Internet before
           the app is launched
        -->
        <meta-data
            android:name="com.dji.sdk.API_KEY"
            android:value="3b2b5e01ba3b8716c4b2ce8c" />
 
        <service android:name=".service.AircraftPushService"
            android:enabled="true"
            android:exported="false"/>
        
    </application>
</manifest>