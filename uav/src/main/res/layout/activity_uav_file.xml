<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <include layout="@layout/layout_uav_title"
        android:id="@+id/uav_title"/>
    
    <FrameLayout
        android:id="@+id/uav_file_list_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/uav_title"/>
    
    <FrameLayout
        android:id="@+id/uav_pre_file_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>