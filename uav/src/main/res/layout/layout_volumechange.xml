<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/voice_add_cut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y29"
        android:layout_marginTop="@dimen/dp_half_one"
        android:background="@color/itemblue">

        <TextView
            android:id="@+id/voice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_volume"
            android:layout_centerVertical="true"
            style="@style/setting_text_style_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/voice_cut"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:background="@drawable/new_voice_cut_icon" />

            <TextView
                android:id="@+id/voice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x5"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/setting_text_gray_two"
                android:textSize="@dimen/x12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x5"
                android:text="@string/text_percent_sign"
                android:textColor="@color/setting_text_gray_two"
                android:textSize="@dimen/x12" />

            <ImageView
                android:id="@+id/voice_add"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:background="@drawable/new_voice_add_icon" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/no_voice"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y29"
        android:layout_marginTop="@dimen/dp_half_one"
        android:background="@color/itemblue">

        <TextView
            android:id="@+id/no_voice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/text_mute"
            android:textColor="@color/setting_text_gray"
            style="@style/setting_text_style_left" />

        <cn.vsx.vc.view.MToggleButton
            android:id="@+id/btn_isNoVoice"
           style="@style/setting_MToggleButton" />
    </RelativeLayout>

</LinearLayout>